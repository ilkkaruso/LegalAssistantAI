# ===================
# APPLICATION
# ===================
DEBUG=true
APP_NAME="Legal Assistant AI"

# ===================
# DATABASE
# ===================
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/legal_assistant
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# ===================
# REDIS
# ===================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ===================
# OBJECT STORAGE (S3/MinIO)
# ===================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=legal-documents
S3_REGION=us-east-1

# ===================
# AUTHENTICATION
# ===================
JWT_SECRET_KEY=your-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================
# OPENAI
# ===================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# ===================
# ANTHROPIC
# ===================
ANTHROPIC_API_KEY=your-anthropic-api-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_MAX_TOKENS=4096

# ===================
# CELERY
# ===================
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# ===================
# CORS
# ===================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://localhost:3002

# ===================
# RATE LIMITING
# ===================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===================
# FILE UPLOAD
# ===================
MAX_UPLOAD_SIZE=104857600
ALLOWED_FILE_TYPES=pdf,docx,doc,txt

# ===================
# ENCRYPTION
# ===================
ENCRYPTION_KEY=

# ===================
# LOGGING
# ===================
LOG_LEVEL=INFO

# ===================
# NEXT.JS FRONTEND
# ===================
NEXT_PUBLIC_API_URL=http://localhost:8000
